rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to archer profiles for guest users
    match /profiles/{document} {
      allow read: if true; // Public read access for guest profile search
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    // Allow authenticated users to read and write their own data for other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
} 